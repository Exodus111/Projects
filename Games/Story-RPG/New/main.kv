#: kivy 1.9.1
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import RiseInTransition kivy.uix.screenmanager.RiseInTransition


<Game>:
    canvas:
        Color:
            rgba: 1., 1., 1., .0
        Rectangle:
            pos: self.pos
            size: self.size

<ClassMenu>:
    button1: button1
    button2: button2
    button3: button3
    menu: menu
    size_hint: None, None
    size: self.gamesize
    center: self.gamesize[0]/2, self.gamesize[1]/2
    Menu:
        id: menu
        size_hint: None, None
        size: root.menu_size
        pos_hint: {"x":.1, "y":.2}
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                Button:
                    id: button1
                    name: "button1"
                    size_hint: .3, .9
                    background_normal: root.imagedict["button1"]["normal"]
                    background_down: root.imagedict["button1"]["clicked"]
                    on_press: root.button_clicked(self)
                Button:
                    id: button2
                    name: "button2"
                    size_hint: .3, .9
                    background_normal: root.imagedict["button2"]["normal"]
                    background_down: root.imagedict["button2"]["clicked"]
                    on_press: root.button_clicked(self)
                Button:
                    id: button3
                    name: "button3"
                    size_hint: .3, .9
                    background_normal: root.imagedict["button3"]["normal"]
                    background_down: root.imagedict["button3"]["clicked"]
                    on_press: root.button_clicked(self)
            Label:
                size_hint: 1., .2
                text: root.book_text

<ClassPopup>:
    title: self.book_title
    title_align: "center"
    size_hint: .4, .8
    separator_color: .12,.12,.12, 1.
    Menu:
        BoxLayout:
            orientation: "vertical"
            Label:
                size_hint: 1., .89
                text: root.book_text
                padding: 15, 15
                text_size: self.size
                halign: "left"
                valign: "top"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1., .08
                Widget:
                    size_hint: .03, 1.
                Button:
                    size_hint: .47, 1.
                    text: "Ok"
                    on_press: root.master.book_chosen(root.book_title)
                    on_release: root.dismiss()
                Button:
                    size_hint: .47, 1.
                    text: "Cancel"
                    on_press: root.dismiss()
                Widget:
                    size_hint: .03, 1.
            Widget:
                size_hint: 1., .03


<StartMenu>:
    transition: FadeTransition()
    button_new: ne
    button_load: lo
    button_about: ab
    button_options: op
    button_quit: qu
    size_hint: None, None
    size: self.gamesize
    canvas:
        Color:
            rgba: .1, .1, .1, .5
        Rectangle:
            pos: root.pos
            size: root.size
    Screen:
        name: "active"
        BoxLayout:
            orientation: "vertical"
            size_hint: None, None
            size: 400, 500
            center: root.gamesize[0]/2, root.gamesize[1]/2
            spacing: 1
            padding: 1
            GUIButton:
                id: ne
                text: "New"
            GUIButton:
                id: lo
                text: "Load"
            GUIButton:
                id: ab
                text: "About"
            GUIButton:
                id: op
                text: "Res:{},{}".format(root.gamesize[0], root.gamesize[1])
            GUIButton:
                id: qu
                text: "Quit"
                on_press: app.stop()
    Screen:
        name: "inactive"

<InGameMenu>:
    button_save: sa
    button_load: lo
    button_options: op
    button_quit: qu
    size_hint: None, None
    size: 400, 500
    center: root.gamesize[0]/2, root.gamesize[1]/2
    BoxLayout:
        orientation: "vertical"
        size_hint: None, None
        size: 400, 500
        spacing: 1
        padding: 1
        GUIButton:
            id: sa
            text: "Save"
        GUIButton:
            id: lo
            text: "Load"
        GUIButton:
            id: op
            text: "Options"
        GUIButton:
            id: qu
            text: "Quit"
            on_press: app.stop()

<GUIButton@Button>:
    name: "gui_button"
    background_normal: "images/gui/guibutton.png"
    background_down: "images/gui/button_down.png"
    font_name: "vcrmono"
    text_size: None, None
    font_size: 32

<ResButton>:
    background_normal: "images/gui/menu_long_bg.png"
    background_down: "images/gui/button_down.png"
    font_name: "vcrmono"
    text_size: None, None
    font_size: 32

<About>:
    name: "about"
    center: self.gamecenter 
    Menu:
        size: root.size
        pos: root.pos
        BoxLayout:
            orientation: "vertical"
            Label:
                size_hint: 1., .2 
                text: root.textlist[0]
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1., .35
                Image:
                    source: "images/gui/author.png"
                    size_hint: .4, 1.
                Label:
                    text: root.textlist[1]
                    size_hint: .6, 1.
                    valign: "center"
                    padding_x: 20
                    text_size: self.size[0]*.8, self.size[1]
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1., .35
                Image:
                    source: "images/gui/artist.png"
                    size_hint: .4, 1.

                Label:
                    text: root.textlist[2]
                    size_hint: .6, 1.
                    valign: "center"
                    padding_x: 20
                    text_size: self.size[0]*.8, self.size[1]


<World>:
    center: self.worldcenter

<ClutterElement>:
    size_hint: None, None
    pos: self.rect[0], self.rect[1]
    size: self.rect[2], self.rect[3]

<WorldElement>:
    size_hint: None, None
    allow_stretch: True
    keep_ratio: True

<Entity>:
    collider: collider
    size_hint: None, None
    canvas:
        Color:
            rgba: 1, 1, 1, 1.
        Rectangle:
            texture: root.frame
            size: root.entsize
            pos: self.frame_pos
    CWidget:
        id: collider
        size_hint: None, None
        size: root.collider_size
        canvas:
            Color:
                rgba: 1, 1, 1, .0
            Rectangle:
                pos: self.pos
                size: self.size

<DoorWidget>:
    size_hint: None, None
    size: 50, 50

<Player>:
    size_hint: None, None
    collider_size: 48, 48

<NPC>:
    size_hint: None, None
    collider_size: 48, 110

<HUD>:
    top_bar: top_bar
    info_manager: info_manager
    floatmenu: floatmenu
    TopBar:
        id: top_bar
        size_hint: 1., .025
        pos_hint: {"x":0., "top":1.}
    ScreenManager:
        id: info_manager
        transition: FadeTransition()
        Screen:
            name: "None"
            size_hint: .35, .15
            pos_hint: {"right":1., "y":.5}
        InfoBox:
            name: "info"
            size_hint: .35, .15
            pos_hint: {"right":1., "y":.5}
            Label:
                text: root.info_text
                font_size: 54
    FloatMenu:
        id: floatmenu
        size_hint: .3, .08
        pos_hint: {"x":.7, "top":.95}
        BoxLayout:
            orientation: "horizontal"
            pos_hint: {"x":.6, "y":.0}
            Button:
                size_hint: None, None
                size: 64, 64
                background_normal: "images/gui/ingamemenu/inventory_icon.png"
                background_down: "images/gui/ingamemenu/inventory_icon_down.png"
                border: 0,0,64,64
                on_press: root.on_press_inv()
            Button:
                size_hint: None, None
                size: 64, 64
                background_normal: "images/gui/ingamemenu/options_icon.png"
                background_down: "images/gui/ingamemenu/options_icon_down.png"
                border: 0,0,64,64
                on_press: root.on_press_opt()

<Menus>:
    manager: manager
    notes: notes
    card: card
    select: select
    ScreenManager:
        id: manager
        transition: FadeTransition()
        size: root.size
        Menu:
            name: "Selection"
            size_hint: .9, .7
            pos_hint: {"x":.05, "top":.85}
            Select:
                id: select
        Menu:
            id: notes
            name: "Card1"
            size_hint: .9, .7
            pos_hint: {"x":.05, "top":.85}
            Card:
                id: card

<InfoBox@Screen>:
    canvas:
        Rectangle:
            source: "images/gui/menu_long_bg.png"
            size: self.size
            pos: 0,0

<DialoguePanels>:
    top_manager: top_manager
    bottom_manager: bottom_manager
    top_panel: top_panel
    bottom_panel: bottom_panel
    question_big: question_big
    ScreenManager:
        id: top_manager
        transition: FadeTransition()
        size: root.size
        Screen:
            name: "None"
            size_hint: 1., .25
            pos_hint: {"x":0., "top":.975}
        Menu:
            id: top_panel
            name: "top_panel"
            size_hint: 1., .25
            pos_hint: {"x":0., "top":.975}
            Label:
                text: root.top_text
                size_hint: 1., 1.
                pos_hint: {"x":.0, "y":.0}
                text_size: self.size
                padding: 20, 20
                valign: "top"
                split_str: " "

    ScreenManager:
        id: bottom_manager
        transition: FadeTransition()
        size: root.size
        Screen:
            name: "None"
            size_hint: 1., .35
            pos_hint: {"x":0., "y":0.067}
        Menu:
            name: "bottom_panel"
            size_hint: 1., .35
            pos_hint: {"x":0., "y":0.067}
            BoxLayout:
                id: bottom_panel
                orientation: "vertical"
                size_hint: .99, .9
                pos_hint: {"y":.05}
        Menu:
            name: "question_big"
            size_hint: 1., .35
            pos_hint: {"x":0., "y":0.067}
            Label:
                id: question_big
                text_size: self.parent.size
                padding: 20, 20
                valign: "top"
            Button:
                text: "Ask this"
                size_hint: .1, .1
                pos_hint: {"x":.88, "y":.1}
                on_release: root.question_selected(self)
            Button:
                text: "Go Back"
                size_hint: .1, .1
                pos_hint: {"x":.78, "y":.1}
                on_release: self.parent.parent.current = "bottom_panel"

<CommentGUI>:
    speechbox: speechbox
    size: self.size
    ScreenManager:
        id: speechbox
        transition: FadeTransition()
        size: root.size
        Screen:
            name: "None"
            size: root.size
            pos_hint: {"x":0., "y":0.}
        CommentBox:
            name: "active"
            size: root.size
            pos_hint: {"x":0., "y":0.}
            Label:
                text: root.text
                font_size: 18
                halign: "center"
                shorten: True
                shorten_from: "right"
                split_str: ","

<CommentBox@Screen>:
    canvas:
        Color:
            rgba: .12,.12,.12, 1.
        Rectangle:
            size: self.size
            pos: 0,0
        Color:
            rgba: 0.435, 0.325, 0.239, 1.
        Rectangle:
            size: self.size[0]-10, self.size[1]-10
            pos: 5, 5

<Question>:
    text: self.question_text
    size: self.size
    pos: self.pos
    background_normal: "images/gui/blank_box.png"
    background_down: "images/gui/seethrough_box.png"
    text_size: self.size
    halign: "left"
    valign: "middle"
    shorten: True
    shorten_from: "right"
    padding_x: 20

<Select>:
    buttons: buttons
    next_button: next_button
    prev_button: prev_button
    retired_button: retired_button
    button_manager: button_manager
    BoxLayout:
        orientation: "vertical"
        padding: 0,0,0,20
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1., .2
            padding: 100,30,30,0
            spacing: 5
            Label:
                text: "Current Cards"
                font_size: 56
                pos_hint: {"center_x":.5, "center_y":.5}
            Button:
                id: retired_button
                text: "Retired Cards"
                size_hint: None, None
                size: 102, 56
                on_release: root.toggle_retired_cards()
        ScreenManager:
            id: button_manager
            transition: SlideTransition()
            Screen:
                name: "page0"
                ButtonLayout:
                    id: buttons
        RelativeLayout:
            size_hint: 1., .1
            pos_hint: {"center_x":.5}
            CycleBut:
                id: prev_button
                text: "<< Previous"
                on_release: root.cycle_inventory("prev")
                pos_hint: {"center_x":.44, "center_y":.5}
            CycleBut:
                id: next_button
                text: "Next >>"
                on_release: root.cycle_inventory("next")
                pos_hint: {"center_x":.56, "center_y":.5}
            Button:
                text: "close"
                size_hint: None, None
                size: 100, 40
                pos_hint: {"x":.875}
                on_release: root.parent.parent.parent.toggle_menu()

<CycleBut@Button>:
    size_hint: None, None
    size: 112, 32

<ButtonLayout>:
    size_hint: 1., .8
    spacing: 10
    padding: 15

<Card>:
    Label:
        text: root.title_text
        font_size: 45
        size_hint: 0.68, 0.2
        pos_hint: {"x":.31, "y":.8}
        text_size: self.size
        halign: "left"
        padding_x: 10

    Label:
        text: root.main_text
        font_size: 25
        pos_hint: {"x":0.3, "y":0.1}
        size_hint: .68, .6
        text_size: self.size
        halign: "left"
        valign: "top"
        padding_y: 10
        padding_x: 15
        split_str: " "
    Label:
        text: root.tags_text
        markup: True
        font_size: 15
        size_hint: .25, .35
        pos_hint: {"center_x":0.175, "y":0.02}
        halign: "left"
        valign: "top"
        markup: True
        text_size: self.size

    Widget:
        pos_hint: {"x":.05, "y":.4}
        canvas:
            Rectangle:
                texture: root.img_tex
                size: self.width/4, self.height/2
                pos: self.pos
    BoxLayout:
        orientation: "horizontal"
        size_hint: .2, .1
        pos_hint: {"x":.76, "y":.025}
        CardBut:
            text: "Selection"
            on_release: root.button_one()
        CardBut:
            text: "Close"
            on_release: root.button_two()

<CardBut@Button>:
    size_hint: None, None
    size: 100, 40
    pos_hint: {"center_x":.5, "center_y":.5}

<Menu>:
    canvas:
        Color:
            rgba: .12,.12,.12, 1.
        Rectangle:
            size: self.size
            pos: 0,0
        Color:
            rgba: 0.435, 0.325, 0.239, 1.
        Rectangle:
            size: self.size[0]-20, self.size[1]-20
            pos: 10, 10

<TopBar>:
    size: self.size
    pos: self.pos
    canvas:
        Color:
            rgba: root.main_color
        Rectangle:
            size: root.size
            pos: root.pos
    RelativeLayout:
        size: root.size
        pos: root.pos
        Label:
            text: root.text_one
            color: root.second_color
            size_hint_x: None
            pos_hint: {"x":0.01,"y":0}
        Label:
            text: root.text_two
            color: root.second_color
            size_hint_x: None
            pos_hint: {"x":0.4, "y":0}
        Label:
            text: root.text_three
            color: root.second_color
            size_hint_x: None
            pos_hint: {"x":0.8, "y":0}

<TestWidget>:
    size_hint: None, None
    size: 25, 25
    canvas:
        Color:
            rgba: 1., 1., 1., .5
        Rectangle:
            pos: self.pos
            size: self.size
